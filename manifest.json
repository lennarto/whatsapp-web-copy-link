{
  "manifest_version": 3,
  "name": "WhatsApp URL Tools",
  "version": "1.0",
  "description": "Adds buttons to WhatsApp Web for copying direct chat URLs",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
  "default_icon": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "default_popup": "popup.html"
},
"icons": {
  "16": "images/icon16.png",
  "48": "images/icon48.png",
  "128": "images/icon128.png"
},
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}