{
  "manifest_version": 3,
  "name": "WhatsApp URL Tools",
  "version": "1.0",
  "description": "Adds buttons to WhatsApp Web for copying direct chat URLs",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}